<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>21 Savage Fans</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Coin Flip</h1>
  


  <h3>Wins and Loses</h3>
  <ul class="results">
  <% for(var i=0; i<results.length; i++) {%>
    <li class="message">
      <span><%= results[i].userGuess %></span>
      <span><%= results[i].coinFlipResult %></span>
      <span><%= results[i].winOrLose %></span>
      <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Choose your fate!</h2>

  <form action="/results" method="POST">
    <input type="text" placeholder="Guess coin flip" name="userGuess">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
